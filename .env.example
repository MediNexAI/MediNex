# MediNex AI Environment Variables Example
# Copy this file to .env and fill in your values

# API Keys
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key
HUGGINGFACE_API_KEY=your_huggingface_api_key

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=medinex
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# API Configuration
API_SECRET_KEY=your_secret_key_here
API_TOKEN_EXPIRY=86400  # 24 hours

# Solana Configuration
SOLANA_NETWORK=devnet  # mainnet, testnet, devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_PRIVATE_KEY=your_solana_private_key_here

# Storage Configuration
STORAGE_TYPE=local  # local, s3, etc.
STORAGE_PATH=./data

# Integration Configuration
PUBMED_EMAIL=support@medinex.life
PUBMED_API_KEY=your_pubmed_api_key

# Logging Configuration
LOG_LEVEL=info  # debug, info, warning, error, critical
LOG_FILE=./logs/medinex.log

# Feature Flags
ENABLE_CACHE=true
ENABLE_MONITORING=true
ENABLE_ANALYTICS=true

# Backend configuration
BACKEND_PORT=4000
BACKEND_HOST=localhost

# Frontend configuration
FRONTEND_PORT=3000
FRONTEND_HOST=localhost

# Database configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/medinex
DATABASE_TEST_URL=postgresql://postgres:postgres@localhost:5432/medinex_test

# IPFS configuration
IPFS_API_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# AI model configuration
AI_MODEL_PATH=./ai/models
AI_SERVICE_URL=http://localhost:5000

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=1d

# Security
CORS_ORIGIN=http://localhost:3000

# Token configuration
TOKEN_SUPPLY=100000000
TOKEN_DECIMALS=9

# Smart contract addresses (filled after deployment)
CONTRACT_TOKEN_ADDRESS=
CONTRACT_MODEL_REGISTRY_ADDRESS=
CONTRACT_CONTRIBUTION_TRACKER_ADDRESS=

# Redis Cache 